import java.util.ArrayList;

class Doctor extends MedicalProfessional {
    private String specialization;
    private int yearsOfExperience;
    private ArrayList<String> patients;

    public Doctor(String id, String name, int age, String gender, String employeeId, double salary, String department, String qualification, String specialization, int yearsOfExperience) {
        super(id, name, age, gender, employeeId, salary, department, qualification);
        this.specialization = specialization;
        this.yearsOfExperience = yearsOfExperience;
        this.patients = new ArrayList<>();
    }

    public void addPatient(String patientName) {
        patients.add(patientName);
    }

    public String getRole() {
        return "Doctor";
    }

    public String toString() {
        return "Doctor: " + name + " | Specialization: " + specialization + " | Experience: " + yearsOfExperience + " years | Patients: " + patients;
    }
}
